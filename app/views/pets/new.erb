<h1>Create a new Pet</h1>
 
<form action="/pets" method="POST">
  <label>Pet Name:</label>
  <br>
  <input type="text" name="name" id="pet_name">
 
  <br>
  <p>Select an existing owner or create a new one below.</p>

  <h3>Existing Owners</h3>
  <% @owners.each do |owner| %>
     <input type="radio" name="owner" id="<%= owner.id %>" value="<%= owner.id %>"></input>
     <label for="owner"><%= owner.name %></label><br>
  <% end %>
  <br>
 
  <h3>New Owner</h3>
  <label>Owner Name: </label>
  <br>
  <input type="text" name="new_owner" id="owner_name"></input>
  <br><br>
 
  <input type="submit" value="Create Pet">
</form>

