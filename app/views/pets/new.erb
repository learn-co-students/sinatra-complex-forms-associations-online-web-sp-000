<h1>Create a new Pet</h1>

<form action="/pets" method="POST">
    <label>Owner Name</label>
    <% Owner.all.each do |owner| %>
        <input type="radio" name="pet[owner_id]" id="<%= owner.id %>" value="<%= owner.id %>"><%= owner.name %></input><br>
    <% end %>
    <input type="text" name="owner[name]" id="owner_name"><br>

    <label>Pet Name</label><br>
    <input type="text" name="pet[name]" id="pet_name"><br>

    <button type="button">Create Pet</button>
    <!--params = {"pet"=>{"name"=>"Challo"}, "owner"=>{"name"=>"Ben"}}-->


</form>

