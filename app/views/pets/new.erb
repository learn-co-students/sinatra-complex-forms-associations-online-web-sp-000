<h1>Create a new Pet</h1>

<form method="post" action="/pets">
    <label>Pet Name: </label>
    <input type="text" name="pet_name"></input>
    <br>

    <p>Select from one of these owners or create a new one.</p>
    
    <h3>Existing Owners</h3>
    <% @owners.each do |owner| %>
        <input type="radio" name="owner_id" id="<%= owner.id %>" value="<%= owner.id %>"><%= owner.name %><br>
    <% end %>

    <h3>Create Owner</h3>
    <label>Owner Name: </label>
    <input type="text" name="owner_name"></input>
    <br><br>
    <input type="submit" value="Create Pet"></input
</form>