<h1>Create a new Pet</h1>

<form action="/pets" method="POST">

  <h3>New Pet</>
  <label>Pet Name:</label>
  <br>
  <input type="text" name="pet[name]" id="pet_name">
  <br><br>

  <h3>Existing Owners</h3>
  <% @owners.each do |owner| %>
    <input type="radio" name="owners[owner_ids][]" id="<%= owner.id %>" value="<%= owner.id %>"><%= owner.name %>
    <br>
  <% end %>
  <br>

  <h3>New Owner</h3>
  <label>Owner Name:</label>
  <br>
  <input type="text" name="owners[new_owner][name]" id="owner_name">
  <br><br>


  <input type="submit" value="Create Pet">
</form>