<h1>Create a new Pet</h1>

<form action="/pets" method="POST">
  <label for="pet_name">Pet Name: </label>
  <input type="text" name="pet[name]" id="pet_name" /> <br />

  <p>Select an existing owner or create a new one below.</p>

  <% @owners.each do |owner| %>
    <input 
      type="radio" 
      name="pet[owner_id]" 
      id="<%= owner.id %>" 
      value="<%= owner.id %>">
      <%= owner.name %>
      </br> 
  <% end %>
  </br>
  <label for="owner_name">Owner Name:</label>
  <input typer="text" name="owner[name]" id="owner_name"> </br> </br>
  <input type="submit" id="submit" value="Create Pet">
</form>
