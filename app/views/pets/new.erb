<h1>Create a new Pet</h1>
<form action="/pets" method="POST">
  <label>Pet's Name:</label>
  <br>
  <input type="text" name="pet_name">
  <br>
  <% @owners.each do |owner| %>
    <input type="radio" id="<%= owner.id %>" name="owner_id" value="<%= owner.id %>"><%= owner.name %><br>
  <% end %>
  <input type="radio" id="none" name="owner_id" value="none">None
  <br>
  <h3>New Owner</h3>
  <label>Owner's Name: </label>
  <br>
    <input type="text" name="owner_name" id="new_owner"></input>
  <br><br>
  <input type="submit" value="Create Pet">
</form>
