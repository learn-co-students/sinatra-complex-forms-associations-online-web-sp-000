<h1>Create a new Pet</h1>

<form class="" action="/pets" method="post">
  <p>Name: <input id="pet_name" type="text" name="pet[name]" value=""></p>

  <h2>Select an existing owner or create a new one below.</h2>

  <h3>Existing Owners</h3>
  <% @owners.each do |owner| %>
    <input id="<%= owner.id %>" type="radio" name="pet[owner_id]" value="<%= owner.id %>"><%= owner.name %></input><br>
  <% end %>
  <br>

  <h3>New Owner</h3>
  <label>Owner Name: </label>
  <br>
  <input type="text" name="owner_name" id="owner_name"></input>
  <br><br>

  <input type="submit" value="Create Pet">

</form>
