<h1>Create new pet</h1>
  <form action="/pets" method="POST">
    <label>Name:</label>
    <br>
    <input type="text" name="pet[name]" id="pet_name">

    <br>
    <p>Select an existing pet or create a new one below.</p>

    <h3>Existing Owners</h3>
    <% @owners.each do |owner| %>

<input type="radio" name="owner[owner_ids][]" id="<%= owner.id %>" value="<%= owner.id %>"><%= owner.name %></input>
    <br>
    <% end %>
    <br>

    <h3>New Owner</h3>
    <label>Owner Name:</label>
    <input type="text" name="owner[name]" id="owner_name">
    <br><br>

    <input type="submit" value="Create Pet">
  </form>
