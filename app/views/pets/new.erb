<h1>Create a new Pet</h1>

<form action="/pets" method="post">
    Name: <input type="text" name="pet[name]" id="pet_name">
    <h3> Existing Owners: </h3>
        <% @owners.each do |owner| %>
        <input type="radio" name="pet[owner_id]" id="<%= owner.id %>" value="<%= owner.id %>"> <%= owner.name %> <br>
        <% end %> 

    <br> <h3> New Owner: </h3>
        Owner Name: <input type="text" name="owner[name]" id="owner_name">

    <br> <br> <input type="submit" id="submit" value="Create Pet">
</form>