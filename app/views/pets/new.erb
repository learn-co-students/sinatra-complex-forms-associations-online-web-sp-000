<h1>Create a new Pet</h1>

<form action="/pets" method="POST">
  <input type="text" name="pet[name]" id="pet_name"><br>
  <h3>Existing Owners: </h3>
  <% @owners.each do |owner| %>
    <input type="radio" name="pet[owner_id]" id="<%= owner.id %>" value="<%= owner.id %>"><%= owner.name %></input>
    <br>
  <% end %>
  <h3>Or create a new owner: </h3>
  <input type="text" name="owner[name]" id="owner_name"><br>
  <input type="submit" value="Create Pet" id="submit">
</form>