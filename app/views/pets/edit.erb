<h1>Update Pet</h1>

<h2>Edits for <%= @pet.name %></h2>

<form action="/pets/<%= @pet.id %>" method="POST">
  <input type="hidden" id="hidden" name="_method" value="PATCH">
  <label for="pet_name">Edit the Pets's Name: </label>
    <input type="text" id="pet_name" name="pet[name]" value="<%= @pet.name %>"><br><br><br>
  <p>Please select from an existing owner or create a new one below:</p>
  <h3>Existing Owners</h3>
  <% @owners.each do |owner| %>
    <input type="radio" name="pet[owner_id]" id="<%= owner.id %>" value="<%= owner.id %>" <%= 'checked' if @pet.owner == owner %>><%= owner.name %></input><br>
  <% end %>
  <br>
  <h3>New Owner</h3>
  <label for="owner_name">Owner's Name: </label>
    <input type="text" id="owner_name" name="owner[name]">
  <br><br>
  <input type="submit" id="Update Pet" value="Update Pet">
</form>
