<h1>Update Pet</h1>

<h2>Edits for <%= @pet.name %></h2>

<form action="/pets/<%= @pet.id %>" method="POST">
  <label>Edit the Pet's Name:</label>
  <input id="hidden" type="hidden" name="_name" value="patch">
  <input id="pet_name" type="text" name="pet[name]" value="<%= @pet.name %>">
  <br>

  <h3>Existing Onwers: </h3>

  <% Owner.all.each do |owner| %>
    <input type="radio" name="pet[owner_id]" id="<%= owner.id %>" value="<%= owner.id %>" <%='checked' if @pet.owner == owner %>><%= owner.name %></input><br>
  <% end %>

  <h3>New Owner</h3>

  <label>Pet Name: </label>
  <input type="text" name="owner[name]" id="owner_name"></input>

  <br><br>

  <input type="submit" value="Update Pet">
</form>
