<h1>Update Pet</h1>

<form action="/pets/<%= @pet.id %>" method="POST">
  <input type="hidden" id="hidden" name="_method" value="PATCH">
  <input type="text" name="pet[name]" id="pet_name" value="<%= @pet.name %>"><br>
  <h3>Existing Owners: </h3>
  <% @owners.each do |owner| %>
    <input type="radio" name="pet[owner_id]" id="<%= owner.id %>" value="<%= owner.id %>" <%= 'checked' if owner.id == @pet.owner_id %>><%= owner.name %></input>
    <br>
  <% end %>
  <h3>Or create a new owner: </h3>
  <input type="text" name="owner[name]" id="owner_name"><br>
  <input type="submit" value="Update Pet" id="submit">
</form>
