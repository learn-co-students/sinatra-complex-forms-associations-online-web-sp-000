<h1>Update Pet</h1>
<form action="/pets/<%=@pet.id%>" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <label>Name: </label>
  <input type="text" name="pet_name" value="<%=@pet.name%>">
  <br>
  <% @owners.each do |owner|%>
    <input type="radio" name="owner_id" id="<%=owner.id%>" value="<%=owner.id%>" <%='checked' if @pet.owner.name == owner.name %>><%=owner.name%></input>
  <%end%>

  <br>
  <label>and/or, create a new owner:</label>
  <br>
  <label>name:</label>
    <input  type="text" name="owner[name]" id="owner_name"></input>
  <br>

  <input type="submit" value="Update Pet">

</form>
