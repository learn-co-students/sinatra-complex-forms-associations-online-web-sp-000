<h1>Update Pet</h1>

<form action="/pets/<%=@pet.id%>" method="post">
  <input type="hidden" name="_method" value="patch">
  <label for="pet_name">Name: </label>
  <input type="text" name="pet[name]" id="pet_name" value="<%=@pet.name%>">
  <br><br>


  <h2><label for="owner">Select New Owner:</label><br></h2>
  <% @owners.each do |owner| %>
    <input type="radio" name="pet[owner]" id="<%= owner.id%>" value="<%= owner.id%>" <%='checked' if @pet.owner == owner%>><%= owner.name%>
    <br>
  <% end%>
  <h2>New Owner</h2>
  <input type="text" name="owner[name]" id="owner_name">
  <br>
  <br>
  <input type="submit" value="Update Pet">

</form>
