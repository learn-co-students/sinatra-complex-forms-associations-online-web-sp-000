<h1>Update Pet</h1>
<h3>Current Name: <%= @pet.name %></h3>
<h4>Current Owner Name: <%= @pet.owner.name %></h4>
<form action='/pets/<%= @pet.id %>' method="POST">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <label for='pet_name'>Name: </label>
  <input type="text" id='pet_name' name='pet[name]'>

  <h1>Select Owner</h1>
  <h2>Existing Owner</h2>
  <%@owners.each do |owner| %>
    <input type="radio" name="pet[owner_id]" id="<%= owner.id %>" value="<%= owner.id %>" <%='checked' if @pet.owner == owner %>><%= owner.name %></input><br>
  <%end%>

  <h2>New Owner</h2>
  <label>Owner Name: </label>
  <input type="text" name='owner[name]' id='owner_name'><br><br>
  <input type='submit' value="Update Pet" id='Update Pet'>
</form>
