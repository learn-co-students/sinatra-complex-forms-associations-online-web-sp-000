<h1>Update Pet</h1>

<h2>Edits for <%= @pet.name %></h2>

<form action="/pets/<%= @pet.id %>" method="POST">
	<input id="hidden" type="hidden" name="_method" value="patch">

	<label>Edit the Pet's Name:</label><br>
	<input type="text" id="pet_name" name="pet[name]" value="<%= @pet.name %>"><br>

	<p>Select an existing owner or create a new one below.</p>

	<h3>Existing Owners</h3>
	<% Owner.all.each do |owner| %>
		<input type="radio" name="pet[owner_id]" value="<%= owner.id %>" id="<%= owner.id %>" <%='checked' if @pet.owner == owner%>><%= owner.name %> <br>
	<% end %>

	<h3>Create a new owner</h3>

	<label>Name:</label><br>
	<input type="text" name="owner[name]" id="owner_name"><br>

	<input type="submit" value="Update Pet">
</form>
