<h1>Update Pet</h1>


<form action="/pets/<%= @pet.id %>" method="POST">
    <input id="hidden" type="hidden" name="_method" value="patch">

    <input type="text" name="pet_name" value="<%= @pet.name %>">
    <br>

    <% @owners.each do |owner| %>
        <input type="radio" name="owner[name]" id="<%= owner.id %>" value="<%= owner.id %>" <%= 'checked' if owner.pets.include?(@pet) %>><%= owner.name %></input><br>
    <% end %>

    <br>

    <input type="text" name="owner_name" placeholder="Create Owner">
    <br>
    <br>
    <input type="submit" value="Update Pet">




</form>