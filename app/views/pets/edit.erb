<h1>Update Pet</h1>

<form action="/pets/<%= @pet.id %>" method="POST">
  <input type="hidden" id="hidden" name="_method" value="patch" />

  <label for="pet_name">Pet Name: </label>
  <input type="text" name="pet[name]" id="pet_name" value="<%= @pet.name %> "/> <br />

  <p>Select an existing owner or create a new one below.</p>

  <% @owners.each do |owner| %>
    <input 
      type="radio" 
      name="pet[owner_id]" 
      id="<%= owner.id %>" 
      value="<%= owner.id %>"
      <%= "checked" if @pet.owner_id == owner.id%> >
      <%= owner.name %>
      </br> 
  <% end %>
  </br>
  <label for="owner_name">Owner Name:</label>
  <input typer="text" name="owner[name]" id="owner_name" value="<%= @pet.owner.name %>"> </br> </br>


  <button type="submit" id="submit">Update Pet</button>
</form>
