<h1>Update Pet</h1>

<form action = "/pets/<%= @pet.id %>" method = "POST">
    <input type = "hidden" id = "hidden" name = "_method" value = "patch">
    <h1>Editing <%= @pet.id%></h1>
    <label>Name: </label><br>
    <input id = "pet_name" type = "text" name = "pet[name]" value = "<%= @pet.name %>">
    <label>Owner: </label><br>
    <h3>Existing Owners</h3>
       <% @owners.each do |owner| %>
         <input type="radio" name="pet[owner_id]" id="<%= owner.id %>" value="<%= owner.id %>" <%='checked' if @pet.owner_id == owner.id %>><%= owner.name %></input><br>
       <% end %>
       <br>
       <h3>New Owner: </h3>
    
    <input type = "text" id = "owner_name" name = "owner[name]"><br>
    <input type = "submit" value = "Update Pet">
    </form>
