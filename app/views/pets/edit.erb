<h1>Update Pet</h1>

<h2>Edits for <%= @pet.name %></h2>
 
  <form action="/pets/<%= @pet.id %>" method="POST">
    <input id="hidden" type="hidden" name="_method" value="patch">
    <label>Edit the Pet's Name:</label>
    <br>
    <input type="text" name="pet_name" value="<%= @pet.name %>">
 
    <br>
    <p>Select an existing owner or create a new one below.</p>
 
 
    <h3>Existing owners</h3>
    <% @owners.each do |owner| %>
      <input type="radio" name="owner[name]" id="<%= owner.id %>" value="<%= owner.id %>" <%= 'checked' if @pet.owner.id == owner.id %>><%= owner.name %></input><br>
    <% end %>
    <br>
 
    <h3>New Oner</h3>
    <label>Owner Name: </label>
    <br>
    <input type="text" name="owner_name" id="owner_name"></input>
    <br><br>
 
    <input type="submit" value="Update Pet">
  </form>
