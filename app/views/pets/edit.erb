<h1>Update Pet</h1>

<form action="/pets/<%=@pet.id%>" method="post">
    <input id="hidden" type="hidden" name="_method" value="patch">
    <label>Edit the Pets Name:</label>
    <br>
    <input type="text" name="pet[name]" value="<%= @pet.name %>" id="pet_name">
    <br>
    <p>Select an existing owner or create a new one.</p>
    <h3>Existing Owners</h3>
    <%@owners.each do |owner|%>
        <input type="radio" 
        name="pet[owner_id]" 
        value="<%=owner.id%>" 
        id="<%=owner.id%>" 

        <%='checked' if @pet.owner == (owner) %>>

        <%=owner.name%>
        <%= @pet.name %>><br>
    <%end%>

    <h3>New Owner</h3>
    <label>Owner Name: </label>
    <br>
    <input type="text" name="owner[name]" id="owner_name"></input>
    <br><br>
 
    <input type="submit" value="Update Pet">

</form>


