<h1>Update Pet</h1>

<h2>Edits for <%= @pet.name %></h2>

    <form action="/pets/<%= @pet.id %>" method="post"> 
        <input type="hidden" name="_method" id="hidden" value="patch"> 
        <label>Edit the Pet's Name: </label>
        <br>
        <input type="text" name="pet[name]" id="pet_name" value="<%= @pet.name %>">
        <br>
        <p>Select an existing owner or create a new one below:</p>
        <br>
        <h3>Existing Owners</h3>
        <% @owners.each do |owner| %> 
            <input type="radio" name="owner[id]" id="<%= owner.id %>" value="<%= owner.id %>" <%= 'checked' if @pet.owner.name == @owner.name %>><%= owner.name %></input><br>
        <% end %>

        <h3>New Owner</h3> 
        <label>Owner's Name: </label>
        <br>
        <input type="text" name="owner[name]" id="owner_name"></input>
        <br><br>

        <input type="submit" id="submit" value="Update Pet">

    </form>


