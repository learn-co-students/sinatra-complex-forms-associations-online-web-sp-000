<h1>Update Pet</h1>


@pet = Pet.find(params[:id])
@owners = Owner.all


<form action="/pets/<%= @pet.id %>" method="POST">
<input type="hidden" id="hidden" name="_method" value="patch">

  <label>Edit the pet name:</label>

  <br>

  <input type="text" name="pet[name]" id="pet_name" value="<%= @pet.name %>" >
  <br>

  <p>Select an existing owner or create a new one below.</p>

  <h3>Existing Owner</h3>
  <% @owners.each do | owner | %>





    <input type="radio" name="pet[owner_id]" id="<%= owner.id %>" value="<%= owner.id %>" <%='checked' if @pet.owner == owner %>  ><%= owner.name %><br>

  <% end %>
  <br>
  and/or, create a new owner:

  <h3>New Owner</h3>
  <label>Owner Name: </label>
  <br>
  <input type="text" name="owner[name]" id="owner_name"></input>
  <br><br>

  <input type="submit" value="Update Pet">
</form>
