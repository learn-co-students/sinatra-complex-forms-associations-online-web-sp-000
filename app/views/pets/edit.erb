<h1>Update Pet</h1>

<h2>Edits for <%= @pet.name %></h2>

<form action='/pets/<%= @pet.id %>' method ='post'>
  <input type="hidden" id="hidden" name="_method" value="patch"> 
  <label for="pet_name">Name:</label>
  <input type="text" name="pet[name]" id="pet_name" value="<%= @pet.name %>">
  <input type="submit" value="Update Pet">

  <p><b>Select an Existing Owner or Create a New Owner Below</b></p>

  <h3>Existing Owners</h3>

  <% @owners.each do |owner| %>
    <input type="radio" name="pet[owner_id]" id="<%= owner.id %>" value="<%= owner.id %>"<%= 'checked' if @pet.owner_id == owner.id %>><%= owner.name %><br>
  <% end %>
  <br>
    
  <h3>New Owner</h3>
  <label for="owner_name">Owner Name: </label>
  <br>
  <input type="text" name="owner[name]" id="owner_name"></input>
  <br><br>


</form>







