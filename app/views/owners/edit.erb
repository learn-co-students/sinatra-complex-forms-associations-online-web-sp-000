<h1>Update Owner <%= @owner.name %></h1>
  <form action="/owners/<%= @owner.id %>" method="POST">
    <input id="hidden" type="hidden" name="_method" value="patch">
    <p>Edit Owner: <input type="text" name="owner[name]" value="<%=@owner.name %>"></p>


    <h2>Pets</h2>
    <% @pets.each do |p| %>
      <input type="checkbox" name="owner[pet_ids][]" id="<%= p.id %>" value="<%= p.id %>" <%='checked' if @owner.pets.include?(p) %>><%= p.name %></input><br>
    <% end %>

    <h3>New Pet</h3>
    <p>Name: <input type="text" name="pet[name]" id="pet_name"></input></p>
    <input type="submit" value="Update Owner">
  </form>